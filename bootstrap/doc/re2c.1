// re2c $INPUT \-o $OUTPUT
#include <assert.h>
#include <stddef.h>

// Maximum number of capturing groups among all rules.
/*!maxnmatch:re2c*/

struct SemVer { int major, minor, patch; };

static int s2n(const char *s, const char *e) { // pre\-parsed string to number
    int n = 0;
    for (; s < e; ++s) n = n * 10 + (*s \- \(aq0\(aq);
    return n;
