func TestLex(t *testing.T) {
    var tests = []struct {
        res int
        str string
    }{
        {0, ""},
        {2, "\(aqone\(aq \(aqtwo\(aq"},
        {3, "\(aqqu\e000tes\(aq \(aqare\(aq \(aqfine: \e\e\(aq\(aq "},
