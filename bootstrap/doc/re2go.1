func test(data string) (result int) {
    tmpfile := "input.txt"

    f, _ := os.Create(tmpfile)
    f.WriteString(data)
    f.Seek(0, 0)

    defer func() {
        if r := recover(); r != nil {
            result = \-2
        }
        f.Close()
        os.Remove(tmpfile)
    }()

    in := &Input{
        file:   f,
        data:   make([]byte, SIZE+1),
        cursor: SIZE,
        marker: SIZE,
        token:  SIZE,
        limit:  SIZE,
        eof:    false,
